#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2);
extern unsigned long timer0_millis;

int btn = 6;
int cnt = 0;
unsigned long sec =0;

void setup(){
  pinMode(btn, INPUT_PULLUP);
  lcd.init();
  lcd.backlight();
}

void loop(){
  if(digitalRead(btn) == LOW){
    cnt += 1;
    timer0_millis = 0;
  }

  if(cnt == 1){
    sec = millis() / 1000;
    delay(1000);
    lcd.setCursor(0,0);
    lcd.print(sec);
    
  }
  if(cnt==2){
    lcd.init();
    lcd.print(sec);
  }  
  if(cnt == 3){
    lcd.init();
    cnt=0;
  }
}
