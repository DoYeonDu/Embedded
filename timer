#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2);
extern volatile unsigned long timer0_millis;

int btn = 6;
int ctn = 0;
unsigned long time1 =0;

void setup(){
  pinMode(btn, INPUT_PULLUP);
  lcd.init();
  lcd.backlight();
}

void loop(){
  if(digitalRead(btn) == LOW){
    ctn += 1;
    timer0_millis = 0;
    
  }

  
  if(ctn == 1){
    time1 = millis() / 1000;
    delay(1000);
    lcd.setCursor(0,0);
    lcd.print(time1);
    
    
  }
  if(ctn==2){
    lcd.init();
      lcd.print(time1);
  }  
  if(ctn == 3){
      lcd.init();
      ctn=0;
    }
}
